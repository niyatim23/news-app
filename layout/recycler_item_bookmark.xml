<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/linear_view_layout_bookmarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_image_bookmark"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:contentDescription="@string/bookmark_icon_content_desc" />

        <TextView
            android:id="@+id/item_title_bookmark"
            android:layout_width="wrap_content"
            android:layout_below="@+id/item_image_bookmark"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="3" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/item_title_bookmark"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/item_time_elapsed_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/item_separator_bookmark"
                android:layout_width="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content"
                android:text="@string/item_separator"
                android:layout_gravity="bottom" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_section_name_bookmark"
                android:layout_marginRight="35dp"
                android:ellipsize="end"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/item_bookmark_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/bookmark_icon_content_desc"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>