<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/recycler_view_layout">


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="article image" />

    <TextView
        android:id="@+id/item_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="3"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_image"
        android:layout_toEndOf="@+id/item_image" />

    <ImageView
        android:id="@+id/item_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:contentDescription="bookmark icon" />


    <TextView
        android:id="@+id/item_time_elapsed"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_image"
        android:layout_toEndOf="@+id/item_image"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/item_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_time_elapsed"
        android:layout_toEndOf="@+id/item_time_elapsed"
        android:layout_alignParentBottom="true"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:text="@string/item_separator" />

    <TextView
        android:id="@+id/item_section_name"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_separator"
        android:layout_toEndOf="@+id/item_separator"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
</androidx.cardview.widget.CardView>